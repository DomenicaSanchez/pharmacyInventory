---
import user from "../assets/user.png";
---

<header>
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <h1 class="text-2xl">
        Gestion de productos
    </h1>
    <p>
      <img src={user.src} alt="Logo" class="h-8 w-8 inline-block ml-2" />
